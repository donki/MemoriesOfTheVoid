<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-android</TargetFramework>
    <ApplicationId>com.memoriesofthevoid.android</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <AssemblyName>MemoriesOfTheVoid.Android</AssemblyName>
    <RootNamespace>MemoriesOfTheVoid.Android</RootNamespace>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.Android" Version="3.8.2.1105" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
  
  <ItemGroup>
    <MonoGameContentReference Include="../Content/Content.mgcb" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="../Content/**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <!-- Include source files -->
    <Compile Include="../src/Core/*.cs" />
    <Compile Include="../src/Systems/*.cs" />
    <Compile Include="../src/Platforms/Android/*.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Exclude Windows-specific files -->
    <Compile Remove="../src/Platforms/Windows/**" />
    <Compile Remove="../src/Tools/**" />
  </ItemGroup>
</Project>