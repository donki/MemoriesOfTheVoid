<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RollForward>Major</RollForward>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
    <AssemblyName>MemoriesOfTheVoid.Windows</AssemblyName>
    <RootNamespace>MemoriesOfTheVoid.Windows</RootNamespace>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.2.1105" />
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.2.1105" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.7" />
  </ItemGroup>
  
  <ItemGroup>
    <MonoGameContentReference Include="../Content/Content.mgcb" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="../Content/**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <!-- Include source files -->
    <Compile Include="../src/Core/*.cs" />
    <Compile Include="../src/Systems/*.cs" />
    <Compile Include="../src/Platforms/Windows/*.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Exclude Android-specific files -->
    <Compile Remove="../src/Platforms/Android/**" />
  </ItemGroup>
</Project>